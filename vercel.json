{
	"version": 2,
	"builds": [
		{ "src": "public/**/*", "use": "@vercel/static" },
		{ "src": "backend/api/index.js", "use": "@vercel/node" }
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "/backend/api/index.js" },
		{ "src": "/(.*)", "dest": "/public/$1" }
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "Content-Security-Policy",
					"value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https://vercel.live;"
				}
			]
		}
	]
}
